<!DOCTYPE html>
  <html>
    <head>
      <!--Import Google Icon Font-->
      <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
      <!--Import materialize.css-->
      <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.min.css">

      <!--Let browser know website is optimized for mobile-->
      <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    </head>

    <body>
<!-- nav bar -->
      <nav>
        <div class="nav-wrapper red darken-3">
          <a href="#!" class="brand-logo center">Gobbler</a>
          <a href="#" data-activates="mobile-demo" class="button-collapse"><i class="material-icons">menu</i></a>
          <ul class="right hide-on-med-and-down">
            <% if (user) { %>
              <li><a href="/logout">Logout</a></li>
            <% } else { %>
              <li><a href="/auth/twitter">Login with twitter</a></li>
            <% } %>
          </ul>
          <ul class="side-nav" id="mobile-demo">
            <% if (user) { %>
              <li><a href="/logout">Logout</a></li>
            <% } else { %>
              <li><a href="/auth/twitter">Login with twitter</a></li>
            <% } %>
          </ul>
        </div>
      </nav>
<!-- input gobble container -->
      <div class="container">
        <ul class="collection with-header">
          <li class="collection-item">
            <h4>
              <% if (user){ %>
                <img src="<%= user.avatar %>" alt="" class="circle">
                <form>
                  <div class="input-field">
                    <input type="text" id="gobble">
                    <label class="active" for="gobble">
                      Gobble on bro...
                    </label>
                      <div class="row">
                        <div class="col s12 offset-1 right-align">
                          <button class="btn" type="submit" name="action">
                            Gobble <i class="material-icons right">send</i>
                          </button>
                          <div class="col s12 offset-1 right-align">
                            <a href="https://twitter.com/share?ref_src=twsrc%5Etfw" class="twitter-share-button" data-show-count="false">
                              Tweet
                            </a>
                            <script async src="https://platform.twitter.com/widgets.js" charset="utf-8">
                            </script>
                          </div>
                        </div>
                      </div>
                    </div>
                  </form>
                </h4>
              </li>
          <!-- users gobbles -->
          <% for(let i = 0; i < user.gobbles.length; i++){ %>
          <li class="collection-item" id="userGobbles">
            <div class="row">
            <div class="col s12 offset-1 left-align">
              <div id=<% user.gobbles[i] %> >
                <strong>@<%= user.displayName %>&nbsp;|&nbsp;</strong><%= user.gobbles[i].content %>


                    <div class="col s12 offset-1 right-align">
                      <button class="btn" type="submit" data-gobbleid="<%= user.gobbles[i]._id %>">
                        Update
                      </button>

                      <button class="btn btn red darken-3" value="delete" data-gobbleid="<%= user.gobbles[i]._id %>">
                        Delete
                      </button>

                        <div class="col s7 offset-12">
                          <span><img class="gravyoff" src="https://i.imgur.com/JmgloVQ.png">
                          </span>
                        </div>
                    </div>
                  </div>
                <% } %>
              <% }; %>
          </li>
        </ul>
      </div>

      <script type="text/javascript" src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js"></script>
      <script>
        $(".button-collapse").sideNav();
      </script>

    </body>
  </html>